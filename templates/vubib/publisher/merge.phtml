        //source select
        $(document).on('click', '#btn_select_src', function () {
            findPublisherLoc(document, workURL, 'src');
            return false;
        });
        //destination find
        $("#dest_pub_find_bt").on('click', function () {
            findPublisher(workURL, 'dest');
